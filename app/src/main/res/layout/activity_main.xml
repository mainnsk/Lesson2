        android:background="#8BC34A" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FF5722" />


    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#3F51B5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#9C27B0" />
